{
  "name": "hexxed",
  "version": "1.1.5",
  "description": "#HEXXED Game - Color Mixing Laboratory",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "game",
    "puzzle",
    "color",
    "electron"
  ],
  "author": "albadon",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/xAlbadon/HEXXED.git"
  },
  "devDependencies": {
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-updater": "^6.1.8",
    "electron-log": "^5.0.1"
  },
  "build": {
    "appId": "com.albadon.hexxed",
    "productName": "#HEXXED",
    "publish": [
      {
        "provider": "github",
        "owner": "xAlbadon",
        "repo": "HEXXED"
      }
    ],
    "files": [
      "electron-main.js",
      "preload.js",
      "index.html",
      "main.js",
      "titleParticles.js",
      "challengeManager.js",
      "colorOrbs.js",
      "colorSystem.js",
      "gameWorld.js",
      "leaderboard.js",
      "linePreviewSystem.js",
      "particleSystem.js",
      "supabaseClient.js",
      "uiManager.js",
      "audioManager.js",
      "export-metadata",
      "updateManager.js",
      "*.css",
      "assets/**/*"
    ],
    "directories": {
      "buildResources": "build-assets",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "build-assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build-assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build-assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}